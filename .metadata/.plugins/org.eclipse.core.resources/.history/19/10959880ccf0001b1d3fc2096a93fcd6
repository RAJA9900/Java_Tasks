package july_29;

public class Arraytask3 {

	public static void main(String args[])
	{
		int ar[]= {101,323,202,2002};
		System.out.println(checkpalindrome(606));
	}

    public static boolean checkpalindrome(int n)
    {
    	int k=0;
    	while(n!=0)
    	{
    		n=n%10;
    		k=k*10+n;
    		n=n/10;
    	}
    	System.out.println(n);
    	if(n==k)
    	{
    		return true;
    	}
    	else
    	{
    	    return false;
    	}
    	
    }
}
